doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title New Contact Form Submission
    style.
      body {
        margin: 0;
        padding: 0;
        background: #f4f6f8;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 30px auto;
        background: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
      }
      .header {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        padding: 30px;
        text-align: center;
        color: #fff;
      }
      .header h1 {
        font-size: 26px;
        margin: 0;
      }
      .header p {
        margin: 8px 0 0;
        font-size: 14px;
        opacity: 0.9;
      }
      .content {
        padding: 30px;
      }
      .field-group {
        margin-bottom: 20px;
      }
      .field-label {
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
        color: #555;
        margin-bottom: 6px;
      }
      .field-value {
        background: #f8f9fa;
        border-radius: 6px;
        padding: 12px 15px;
        font-size: 15px;
        line-height: 1.5;
      }
      .message-box {
        background: #fff9f0;
        border: 1px solid #ffe0b2;
        border-radius: 6px;
        padding: 15px;
        font-size: 15px;
        line-height: 1.6;
        color: #444;
      }
      .cta {
        text-align: center;
        margin: 30px 0;
      }
      .cta a {
        display: inline-block;
        padding: 12px 24px;
        background: #4e54c8;
        color: #fff;
        text-decoration: none;
        border-radius: 6px;
        font-size: 15px;
        font-weight: bold;
      }
      .footer {
        background: #f4f6f8;
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #777;
        border-top: 1px solid #e0e0e0;
      }
  body
    .container
      // Header
      .header
        h1 ðŸ“© New Contact Form Submission
        p You've received a new inquiry from your website
      
      // Content
      .content
        .field-group
          .field-label Name
          .field-value #{name}
        .field-group
          .field-label Email
          .field-value #{email}
        .field-group
          .field-label Phone
          .field-value #{phone}
        .field-group
          .field-label Subject
          .field-value #{subject}
        .field-group
          .field-label Message
          .message-box #{message}
        
        .cta
          a(href=`mailto:${email}`) Reply to #{name}
      
      // Footer
      .footer
        p This email was automatically generated from your website's contact form.
        p Please respond within 24 hours for the best customer experience.
