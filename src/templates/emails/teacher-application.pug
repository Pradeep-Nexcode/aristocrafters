doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Teacher Application
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.7;
        color: #2d3748;
        background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
        padding: 40px 20px;
      }
      .email-wrapper {
        max-width: 600px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
      }
      .header {
        background: #ffffff;
        padding: 50px 40px 30px;
        text-align: center;
        position: relative;
      }
      .header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #4299e1 0%, #3182ce 100%);
      }
      .logo {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
        border-radius: 16px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: white;
        font-weight: bold;
      }
      .header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 8px;
        letter-spacing: -0.5px;
      }
      .header p {
        font-size: 16px;
        color: #718096;
        margin: 0;
      }
      .content {
        padding: 0 40px 40px;
      }
      .section {
        margin-bottom: 40px;
      }
      .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
      }
      .section-icon {
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
        border-radius: 6px;
        margin-right: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
      }
      .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        margin-bottom: 24px;
      }
      .info-item {
        background: #f7fafc;
        padding: 20px;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
      }
      .info-item:hover {
        border-color: #cbd5e0;
        transform: translateY(-1px);
      }
      .info-label {
        font-weight: 500;
        color: #718096;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
      }
      .info-value {
        font-size: 16px;
        font-weight: 600;
        color: #2d3748;
        line-height: 1.4;
        word-wrap: break-word;
      }
      .subjects-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 12px;
      }
      .subject-tag {
        background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 500;
        border: none;
      }
      .classes-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 12px;
      }
      .class-tag {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 500;
        border: none;
      }
      .full-width {
        grid-column: 1 / -1;
      }
      .experience-highlight {
        background: linear-gradient(135deg, #fed7d7 0%, #feb2b2 100%);
        padding: 24px;
        border-radius: 16px;
        border: none;
        margin: 20px 0;
        text-align: center;
      }
      .experience-years {
        font-size: 32px;
        font-weight: 700;
        color: #c53030;
        margin-bottom: 8px;
      }
      .experience-text {
        color: #742a2a;
        font-weight: 500;
      }
      .status-card {
        background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
        color: white;
        padding: 24px;
        border-radius: 16px;
        text-align: center;
        margin: 32px 0;
      }
      .status-badge {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 8px 20px;
        border-radius: 25px;
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
        display: inline-block;
        margin-bottom: 12px;
      }
      .status-title {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 8px;
      }
      .status-description {
        opacity: 0.9;
        font-size: 14px;
      }
      .priority-badge {
        background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        margin-left: 12px;
        border: none;
      }
      .footer {
        background: #f8fafc;
        padding: 32px 40px;
        text-align: center;
        border-top: 1px solid #e2e8f0;
      }
      .footer p {
        color: #718096;
        font-size: 14px;
        margin-bottom: 8px;
      }
      .timestamp {
        color: #a0aec0;
        font-size: 13px;
        font-weight: 500;
      }
      @media (max-width: 600px) {
        body {
          padding: 20px 10px;
        }
        .header, .content, .footer {
          padding-left: 24px;
          padding-right: 24px;
        }
        .info-grid {
          grid-template-columns: 1fr;
        }
      }
  body
    .email-wrapper
      .header
        .logo T
        h1 New Teacher Application
        p Join our educational excellence team
        if experience && parseInt(experience) >= 5
          span.priority-badge EXPERIENCED
      
      .content
        .section
          .section-title
            .section-icon üë§
            | Personal Information
          .info-grid
            .info-item
              .info-label Full Name
              .info-value #{name}
            .info-item
              .info-label Email Address
              .info-value #{email}
            .info-item
              .info-label Phone Number
              .info-value #{phone}
            .info-item
              .info-label Location
              .info-value #{location || 'Not specified'}
        
        .section
          .section-title
            .section-icon üéì
            | Academic Qualifications
          .info-grid
            .info-item
              .info-label Highest Qualification
              .info-value #{qualification}
            .info-item
              .info-label Teaching Experience
              .info-value #{experience} years
            .info-item.full-width
              .info-label Subjects Expertise
              .subjects-list
                each subject in subjects
                  .subject-tag #{subject}
            .info-item.full-width
              .info-label Subjects Can Teach
              .classes-list
                if subjects && subjects.length > 0
                  each subject in subjects
                    .class-tag #{subject}
                else
                  .class-tag No subjects specified
        
        if experience && parseInt(experience) >= 3
          .experience-highlight
            .experience-years #{experience}
            .experience-text Years of Teaching Experience
        
        .section
          .section-title
            .section-icon ‚öôÔ∏è
            | Teaching Preferences
          .info-grid
            .info-item
              .info-label Preferred Mode
              .info-value #{preferredMode || 'Not specified'}
            .info-item
              .info-label Availability
              .info-value #{availability || 'To be discussed'}
        
        if additionalInfo
          .section
            .section-title
              .section-icon üìù
              | Additional Information
            .info-grid
              .info-item.full-width
                .info-label Cover Letter / Additional Details
                .info-value #{additionalInfo}
        
        if hasResume
          .section
            .section-title
              .section-icon üìÑ
              | Documents
            .info-grid
              .info-item.full-width
                .info-label Resume/CV
                .info-value Document attached: #{resumeFileName}
        else
          .section
            .section-title
              .section-icon üìÑ
              | Documents
            .info-grid
              .info-item.full-width
                .info-label Resume/CV
                .info-value No resume uploaded
        
        .status-card
          .status-badge Under Review
          .status-title Application Received
          .status-description We'll review this application and schedule an interview within 48-72 hours
      
      .footer
        p Thank you for your interest in joining our team
        .timestamp Applied on: #{new Date().toLocaleString('en-US', { timeZone: 'Asia/Kolkata', dateStyle: 'full', timeStyle: 'medium' })}